<div class="modal fade" id="modal-register" tabindex="-1" role="dialog" aria-labelledby="myModalRegister">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1>Register</h1>
                <div class="modal-close" data-dismiss="modal"> </div> 
            </div>
            <form id="form-register" class="form">
                <div class="modal-body">
                    <ul>
                        <li>
                            <input type="text" id="tb-firstname" class="text" value="First name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'First name';}">
                            <a href="#" class=" icon user"></a>
                        </li>
                            <div class="clear"> </div>
                        <li>
                            <input type="text" id="tb-lastname" class="text" value="Last name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Last name';}">
                            <a href="#" class=" icon user"></a>
                        </li>
                            <div class="clear"> </div>
                        <li>
                            <input type="text" id="tb-username" class="text" value="Username" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Username';}">
                            <a href="#" class=" icon user"></a>
                        </li>
                            <div class="clear"> </div>
                        <li>
                            <input type="password" id="tb-password" value="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}"> 
                            <a href="#" class="icon lock"></a>
                        </li>
                    </ul>
                    <div class="clear"> </div>
                    <div class="submit">
                        <button type="submit" class="btn">Register</button>
                        <div class="clear">  </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>