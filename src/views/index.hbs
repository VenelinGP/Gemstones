</head>
<body>
<div id="site-wrap">
    <header id="header">
        <div>
            <div class="text-wrap">
                <div class="crossfade">
                    <figure></figure>
                    <figure></figure>
                    <figure></figure>
                    <figure></figure>
                </div>
            </div>
            <nav id="nav" class="effect">
                <div class="nav-color">
                    <div class="nav-opacity">
                        <a id="logo" href="#/home" ng-click="collapsed = collapsed">
                            <img src="img/Logo.png">
                        </a>
                        <ul class="nav">
                            <li>
                                <a href="#/home" title="home" ng-click="collapsed = collapsed">Home</a>
                            </li>
                            <li>
                                <a href="#/menu" ng-click="collapsed =!collapsed">Menu</a>
                                    <ul>
                                        <li>
                                            <a href="menu/alcohol" ng-click="collapsed =!collapsed">Alcohol Drinks</a>
                                        </li>
                                        <li>
                                            <a href="#" ng-click="collapsed = collapsed">Alcohol free Drinks</a>
                                        </li>
                                        <li>
                                            <a href="#" ng-click="collapsed = collapsed">Foods</a>
                                        </li>
                                        <li>
                                            <a href="#" ng-click="collapsed = collapsed">Hot drinks</a>
                                        </li>
                                        <li>
                                            <a href="#" ng-click="collapsed = collapsed">Deserts</a>
                                        </li>
                                    </ul>

                            </li>
                            <li>
                                <a href="#/galery" ng-click="collapsed =!collapsed">Galery</a>
                            </li>
                            <li>
                                <a href="#/about" ng-click="collapsed =!collapsed">About</a>
                            </li>
                            <li id="login-placeholder"></li>
                        </ul>
                    </div>
                </div>
            </nav>
            {{!--MODAL FORM LOGIN--}}
                <div class="modal fade modal-login" tabindex="-1" role="dialog" aria-labelledby="myModalLogin">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="">
                            <div class="login-head">
                                <h1>Login</h1>
                                <div class="alert-close" data-dismiss="modal"> </div> 
                            </div>
                            </div>
                            <form id="form-login" class="form">
                                <div class="modal-body">
                                    <li>
                                        <input type="text" class="text" value="Username" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Username';}">
                                        <a href="#" class=" icon user"></a>
                                    </li>
                                        <div class="clear"> </div>
                                    <li>
                                        <input type="password" value="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}"> 
                                        <a href="#" class="icon lock"></a>
                                    </li>
                                    <div class="clear"> </div>
                                    <div class="submit">
                                        <button type="submit" class="btn">Sign in</button>
                                        {{!--<input type="submit" onclick="myFunction()" value="Sign in">--}}
                                        <h4><a href="#">Lost your Password ?</a></h4>
                                                <div class="clear">  </div>
                                    </div>

                                </div>

                                {{!--<div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>--}}
                            </form>
                        </div>

                    </div>
                </div>
            {{!--MODAL FORM REGISTER--}}
            <div class="modal fade modal-register" tabindex="-1" role="dialog" aria-labelledby="myModalRegister">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="">
                        <div class="login-head">
                            <h1>Register</h1>
                            <div class="alert-close" data-dismiss="modal"> </div> 
                        </div>
                        </div>
                        <form id="form-login" class="form">
                            <div class="modal-body">
                                    <li>
                                    <input type="text" class="text" value="First name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'First name';}">
                                    <a href="#" class=" icon user"></a>
                                </li>
                                    <div class="clear"> </div>
                                <li>
                                    <input type="text" class="text" value="Last name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Last name';}">
                                    <a href="#" class=" icon user"></a>
                                </li>
                                    <div class="clear"> </div>
                                <li>
                                    <input type="text" class="text" value="Username" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Username';}">
                                    <a href="#" class=" icon user"></a>
                                </li>
                                    <div class="clear"> </div>
                                <li>
                                    <input type="password" value="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}"> 
                                    <a href="#" class="icon lock"></a>
                                </li>
                                <div class="clear"> </div>
                                <div class="submit">
                                    <button type="submit" class="btn">Register</button>
                                    {{!--<input type="submit" onclick="myFunction()" value="Register">--}}
                                    <h4><a href="#">Lost your Password ?</a></h4>
                                            <div class="clear">  </div>
                                </div>

                            </div>
                        </form>
                    </div>

                </div>
            </div>
            <div class="text-wrap">
                <div id="head-title" ng-controller="HomeController as vm">
                    <h1 class="title">
                        Selena Gemstone Store
                        {{!--{{vm.home}}--}}
                    </h1>
                    <p>
                        Welcome <br/>
                        Work time <br/>
                        08:00 - 22:00 <br/>
                        every day <br/>
                    </p>
                    <button class="btn">Reservation here</button>
                </div>
            </div>
        </div>
    </header>

</div>

